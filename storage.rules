rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all item images
    match /items/{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own folder within items
    // The path should be like: /items/{userId}/{fileId}
    match /items/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Optional: Add rules for profile pictures if needed in the future
    match /profile-pictures/{userId}/{allPaths=**} {
        allow read;
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
